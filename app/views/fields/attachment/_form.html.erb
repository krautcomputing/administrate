<div class="field-unit__label">
  <%= f.label field.attribute %>
</div>
<div class="field-unit__field">
  <% if field.data.present? %>
    <%= link_to field.data.original_filename, field.data.url %>
    <%= f.label "remove_#{field.attribute}" do %>
      <%= f.check_box "remove_#{field.attribute}" %>
      Remove
    <% end %>
  <% end %>
  <%= f.file_field field.attribute %>
</div>
